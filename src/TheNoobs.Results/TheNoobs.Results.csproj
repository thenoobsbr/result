    <ImplicitUsings>true</ImplicitUsings>
    <IsPackable>true</IsPackable>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <OutputType>library</OutputType>
    <GenerateFullPaths>true</GenerateFullPaths>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>
  <PropertyGroup>
    <Authors>The Noobs</Authors>
    <NeutralLanguage>en-US</NeutralLanguage>
    <RepositoryType>GIT</RepositoryType>
    <LangVersion>default</LangVersion>
    <PackageIcon>icon.png</PackageIcon>

    <PackageId>TheNoobs.Results</PackageId>
    <Description>The Result pattern to avoid the usage of exceptions in making decisions.</Description>
    <PackageProjectUrl>https://github.com/thenoobsbr/result</PackageProjectUrl>
    <RepositoryUrl>https://github.com/thenoobsbr/result</RepositoryUrl>
    <PackageTags>dotnet; result</PackageTags>

